generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
    project_id Int @id @default(autoincrement())
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt

    name String @db.VarChar(255)
    supply Int?
    allocated_allowlist_amount Int?
    description String?
    twitter_handle String?
    discord_url String?
    opensea_url String?
    presale_datetime DateTime?
    public_sale_datetime DateTime?
    has_allow_list Boolean?
    is_revealed Boolean?
    project_state ProjectState? @default(PAUSED)
    mint_price String?
    max_mint_per_transaction Int?
    contract_address String?

    created_by User? @relation(fields: [userId], references: [user_id])
    userId Int?
}

model User {
    user_id Int @id @default(autoincrement())
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt
    
    address String @db.VarChar(255) @unique
    user_name String? @db.VarChar(255) @unique
    nonce Int
    avatar_url String? @db.VarChar(255)

    projects Project[]
}

enum ProjectState {
    PAUSED
    PRESALE
    PUBLIC
}
